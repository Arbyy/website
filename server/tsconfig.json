{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "module": "es2020",
      "allowJs": true, // Temporary for the TS port
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2018",
      "typeRoots": [
        "node_modules/@types"
      ],
      "skipLibCheck": true, 
      "lib": [
        "es2017",
        "dom"
      ]
    }
  }
